@{
    ViewData["Title"] = "Thank you";
    var id = ViewBag.IssueId as string;
}

<!-- ============================= -->
<!-- Success Hero                  -->
<!-- ============================= -->
<section class="hero-wrap text-center py-5 fade-in">
    <div class="container">
        <div class="mb-4">
            <div class="display-3 mb-3">✅</div>
            <h2 class="fw-bold text-success">Issue Submitted Successfully!</h2>
            <p class="lead text-body-secondary">
                Thank you for helping us keep the city running smoothly.
            </p>
        </div>

        <div class="alert alert-success d-inline-block shadow-sm">
            <h6 class="mb-1">Your reference number:</h6>
            <div class="fw-bold fs-5 text-uppercase">
                @(id?.Substring(0, 8).ToUpper())
            </div>
        </div>

        <div class="mt-4 d-flex flex-column flex-sm-row justify-content-center gap-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                ⬅ Back to Main Menu
            </a>
            <a asp-controller="Issues" asp-action="Create" class="btn btn-primary">
                ➕ Submit Another Issue
            </a>
        </div>
    </div>
</section>

<!-- ============================= -->
<!-- Celebration Confetti Effect   -->
<!-- ============================= -->
@section Scripts {
    <script>
        // Simple confetti burst 🎉
        document.addEventListener("DOMContentLoaded", () => {
            const colors = ["#198754", "#0d6efd", "#ffc107", "#dc3545"];
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement("div");
                confetti.className = "confetti";
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.left = Math.random() * 100 + "vw";
                confetti.style.animationDuration = (Math.random() * 3 + 2) + "s";
                document.body.appendChild(confetti);
                setTimeout(() => confetti.remove(), 5000);
            }
        });
    </script>
}
