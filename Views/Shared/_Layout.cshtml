@*
  _Layout.cshtml — polished and fixed
  - Uses aria-current="@(condition ? "page" : null)" (no Razor parse errors)
  - Adds skip-to-content for accessibility
  - Flash message slot using TempData["Flash"]
  - Sticky footer via Bootstrap utilities (body flex + main flex-grow-1)
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MunicipalServicesMVC</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/MunicipalServicesMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <meta name="theme-color" content="#0d6efd" />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Skip to main content (a11y) -->
    <a class="visually-hidden-focusable position-absolute top-0 start-0 m-2 btn btn-sm btn-outline-primary"
       href="#mainContent">Skip to main content</a>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/city-logo.jpg"
                         asp-append-version="true"
                         alt="City Crest"
                         width="32" height="32"
                         class="rounded-circle shadow-sm" />
                    <span class="fw-bold">City of eThekwini</span>
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNavbar" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            var action = (ViewContext.RouteData.Values["action"]?.ToString() ?? "").ToLowerInvariant();
                            var controller = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
                            bool isHome = controller == "home" && action == "index";
                            bool isPrivacy = controller == "home" && action == "privacy";
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark @(isHome ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index"
                               aria-current="@(isHome ? "page" : null)">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(isPrivacy ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Privacy"
                               aria-current="@(isPrivacy ? "page" : null)">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <!-- Flash message (optional) -->
        @if (TempData["Flash"] is string flash && !string.IsNullOrWhiteSpace(flash))
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                @flash
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <main id="mainContent" role="main" class="flex-grow-1 pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex flex-wrap justify-content-between align-items-center py-3">
            <span>&copy; 2025 - MunicipalServicesMVC</span>
            <a class="link-secondary" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
