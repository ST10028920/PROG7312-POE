@{
    ViewData["Title"] = "Privacy";
}

<!-- ============================= -->
<!-- Hero / Header                 -->
<!-- ============================= -->
<section class="hero-wrap mb-4">
    <div class="container py-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <span class="badge bg-primary-subtle text-primary fw-semibold">Policy</span>
                <h2 class="fw-bold mb-1">Privacy &amp; Terms</h2>
                <p class="text-body-secondary mb-0">
                    We respect your data and aim to keep this service transparent, secure, and easy to use.
                    Below you’ll find the key principles of how your information is handled.
                </p>
            </div>

            <!-- Visual (rotating ring + lock icon) -->
            <div class="col-md-4 d-none d-md-grid">
                <div class="privacy-visual" aria-hidden="true">
                    <div class="privacy-ring"></div>
                    <img src="~/images/lock-icon.jpeg"
                         asp-append-version="true"
                         alt="Privacy lock"
                         class="privacy-icon" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ============================= -->
<!-- Content                       -->
<!-- ============================= -->
<div class="container">
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card h-100 card-glass fade-in" style="--delay:.06s">
                <div class="card-body">
                    <h6 class="fw-semibold mb-2">At a glance</h6>
                    <ul class="small text-body-secondary ps-3 mb-0">
                        <li>No account required for reporting issues.</li>
                        <li>Uploads are stored only to support your report.</li>
                        <li>We don’t sell your data. Ever.</li>
                        <li>You can request removal of an upload/reference.</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card h-100 card-glass fade-in" style="--delay:.12s">
                <div class="card-body small text-body-secondary">
                    <h6 class="fw-semibold mb-2">More details</h6>
                    <p>
                        Information submitted in your reports is processed solely for municipal service delivery.
                        Attachments are optional and only stored as long as needed.
                    </p>
                    <p>
                        For academic purposes (this prototype), no personal data is permanently stored or shared.
                    </p>
                    <p class="mb-0">
                        <strong>Last updated:</strong> September 2025
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
